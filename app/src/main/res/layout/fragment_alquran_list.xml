<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/layer"
    android:layout_height="match_parent">
    <TextView
        android:textAlignment="center"
        android:id="@+id/keterangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:text="Silahkan Cari Surat"
        />
    <AutoCompleteTextView
        android:visibility="gone"
        android:id="@+id/autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16sp"
        android:hint="Cari Surat" />
    <ImageView
        android:layout_below="@+id/keterangan"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/bismmillah"
        android:src="@drawable/bismillah"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bismmillah"
        android:background="@color/layer"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#efefef"
        android:dividerHeight="2sp"
        android:listSelector="@android:color/transparent"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtSilahkanCari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Silahkan Cari Surat"
        android:visibility="gone" />


</RelativeLayout>